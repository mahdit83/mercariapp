<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <declare-styleable name="BaseInput">
        <attr name="android:title" />
        <attr name="android:icon" />
        <attr name="android:textAlignment"/>
    </declare-styleable>

    <declare-styleable name="PersianTextInput">
        <attr name="android:text" />
        <attr name="android:inputType" />
        <attr name="android:imeOptions" />
        <attr name="android:maxLength" />
        <attr name="android:maxLines" />
        <attr name="required" format="boolean"/>
        <attr name="icon" format="reference"/>
    </declare-styleable>

    <declare-styleable name="UserCardPicker">
        <attr name="small" format="boolean"/>
        <attr name="showNewUserCard" format="boolean"/>
        <attr name="listenItemClicks" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="Gallery">
        <attr name="itemsMargin" format="dimension"/>
        <attr name="itemSizeRatio" format="float"/>
    </declare-styleable>

</resources>