<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HomeItemsText">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/homeItemColor</item>
        <item name="android:fontFamily">@font/iransansmobile</item>
    </style>

    //Buttons

    <style name="DefaultButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/defaultbutton_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:fontFamily">@font/iransansmobile</item>
        <item name="android:textAlignment">center</item>
        <item name="android:minHeight">@dimen/defaultButtonMinHeight</item>
    </style>

    //Texts

    <style name="PrimaryText">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:fontFamily">@font/iransansmobile</item>
    </style>

    <style name="TitleText" parent="PrimaryText">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>


</resources>
